datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  content   String?
  timestamp DateTime?
  sender    String?
  chat      Chat?     @relation(fields: [chatId], references: [id])
  chatId    String?
}

model Chat {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  isGroup   Boolean?
  chatName  String?
  messages  Message[]
}

model Contact {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  contacts  Contact[] @relation(name: "ContactOnContacts")
  contact   Contact?  @relation(name: "ContactOnContacts", fields: [contactId], references: [id])
  contactId String?
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  firstName String?
  lastName  String?
  username  String    @unique
  email     String?   @unique
  password  String
  roles     Json
  contacts  Contact[]
}
